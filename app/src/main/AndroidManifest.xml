<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.desmond.allaboutrecyclerview" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gridview.GridLayoutActivity"
            android:label="@string/title_activity_grid_layout" >
        </activity>
        <activity
            android:name=".listview.ListLayoutActivity"
            android:label="@string/title_activity_list_layout" >
        </activity>
    </application>

</manifest>
